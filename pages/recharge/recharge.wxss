/* pages/recharge/recharge.wxss */
.recharge{
  width: 100%;
  padding-top: 174rpx;
}
.balance_top{
  width: 100%;
  height: 48rpx;
  background: #e5a11d;
  color: #333333;
  position: fixed;
  top: 145rpx;
  left: 0;
  font-size: 28rpx;
  text-align: right;
  line-height: 48rpx;
}
.balance_top text{
  margin-right: 72rpx;
  color: #ff1c1c;
}
.recharge_list{
  width: 710rpx;
  height: 560rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 10rpx;
  margin: 85rpx auto 75rpx;
  overflow: hidden;
}
.recharge_num{
  font-size: 36rpx;
  color: #fff;
  margin-top: 108rpx;
  margin-left: 180rpx;
}
.recharge_num text{
  font-size: 50rpx;
  color: #ff1c1c;
}
.recharge_box{
  margin-top: 66rpx;
  padding: 0 26rpx;
}
.recharge_box .recharge_item{
  width: 204rpx;
  height: 126rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #333;
  float: left;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 32rpx;
}
.recharge_box .recharge_item:not(:nth-child(3n)){
  margin-right: 16rpx;
}
.recharge_item.default{
  border: 1px solid #f0f0f0;
  background: #fff;
}
.recharge_item.selected{
  border: 1px solid #ffb320;
  background: #d0d0d0;
}
.recharge_item text{
  display: block;
}
.recharge_item .supple{
  font-size: 20rpx;
}
.pay_btn{
  width: 440rpx;
  height: 72rpx;
  background: #09bb07;
  border-radius: 72rpx;
  color: #fff;
  font-size: 28rpx;
  box-shadow: 0 5rpx 0 #018000;
}