/* pages/chat_list/chat_list.wxss */
.chat_list{
  height: 100%;
  width: 100%;
  overflow: hidden;
  padding-top: 145rpx;
}
.bg_img{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
}
.list-item{
  width: 720rpx;
  margin: 0rpx auto;
}
.item-detail{
  border-bottom: 1px solid #595959;
  height: 164rpx;
  display: flex;
  color: #fff;
  font-size: 24rpx;
  justify-content: space-between;
  
}
.item-detail .user_box{
  display: flex;
  align-items: center;
}
.item-detail .user_img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.user_img_box{
  position: relative;
}
.user_img_box .chat_num{
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: #f25e3d;
  color: #fff;
  border-radius: 50%;
  width: 36rpx;
  height: 36rpx;
  text-align: center;
  line-height: 36rpx;
  font-size: 16rpx;
}
.item-detail .user_con{
  margin-left: 22rpx;
}
.item-detail .user_con text{
  display: block;
}
.item-detail .user_con text:last-child{
  color: #999;
  margin-top: 20rpx;
  display: block;
  width: 365rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.item-detail .item_time{
  font-size: 14rpx;
  float: right;
  height: 124rpx;
  display: flex;
  align-items: flex-end;
}