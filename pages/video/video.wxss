/* pages/video/video.wxss */
cover-view{
  overflow: visible;
  white-space: normal;
}
.video{
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
#video{
  position: fixed;
  top:0;
  left:0;
  width:100%;
  height: 100%;
  z-index: -1;
}
.video_item{
  position: fixed;
  top:0;
  left:0;
  width:100%;
  height: 100%;
  z-index: -1;
}
.video_info{
  display: flex;
  /* width:100%; */
  flex-direction: row;
  padding:136rpx 90rpx 0 36rpx;
}
.user_info{
  display: flex;
  flex-direction: row;
  margin-right: 20rpx;
}
.user_info cover-image{
  width: 129rpx;
  height: 129rpx;
  border-radius: 100%;
}
.user_info_desc{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 310rpx;
  height: 66rpx;
  margin:30rpx 0 0 -30rpx;
  padding-left: 50rpx;
  background-color: rgba(162,126,86,.4);
  border-radius: 28rpx;
}
.info_desc{
  display: flex;
  flex-direction: column;
  /* margin-right: 28rpx; */
}
.info_desc .info_name{
  font-size: 26rpx;
  color: #ffffff;
  line-height: 36rpx;
}
.info_desc .info_state{
  width: 72rpx;
  height: 24rpx;
  background-color: #16cd13;
  text-align: center;
  font-size: 20rpx;
  color: #ffffff;
  line-height: 24rpx;
  border-radius: 12rpx;
}
.attention{
  width: 110rpx;
  height: 60rpx;
  margin-top:3rpx;
  background-color: #ffb320;
  font-size: 28rpx;
  color: #ff0000;
  text-align: center;
  line-height: 60rpx;
  /* margin-left: 10rpx; */
  border-radius: 25rpx;
}
.attentioned{
  width: 110rpx;
  height: 60rpx;
  margin-top:3rpx;
  background-color: #cacaca;
  font-size: 28rpx;
  color: #fefefe;
  text-align: center;
  line-height: 60rpx;
  /* margin-left: 10rpx; */
  border-radius: 25rpx;
}
.user_box{
  position: relative;
}
.user_box cover-image{
  position: absolute;
  top:30rpx;
  width: 73rpx;
  height: 73rpx;
}
.user_box cover-image:nth-child(1){
  left: 0; 
  z-index: 10;
}
.user_box cover-image:nth-child(2){
  left: 45rpx;  
  z-index: 9;
}
.user_box cover-image:nth-child(3){
  left: 85rpx;  
  z-index: 8;
}

.video_words{
  position: absolute;
  bottom: 70rpx;
  left:0;

}
.video_desc{
  width: 425rpx;
  margin-left:60rpx;
}
.video_desc .video_desc_box{
  font-size: 28rpx;
  color: #edf7ff;
  line-height: 48rpx;
}
.video_label{
  display: flex;
  flex-wrap:wrap;
  width: 380rpx;
  margin-left:60rpx;
}
.video_label cover-view{
  display: inline-block;
  width: 100rpx;
  height: 46rpx;
  margin:15rpx 22rpx 0 0;
  border-radius: 20rpx;
  text-align: center;
  line-height: 46rpx;
  font-size: 28rpx;
  color: #edf7ff;
  background-color: #ffc23f;
}
.video_option{
  position: absolute;
  bottom: 70rpx;
  left: 540rpx;
}
.heart_box,.share_box{
  display: flex;
  padding: 5px 20rpx;
  margin:0 0 25rpx 60rpx;
  background-color: rgba(33, 26, 18, .4);
  border-radius: 20rpx;
}
.share_box{
  position: relative;
}
.share_box .share_btn{
  position: absolute;
  left: 0;
  top: 0;
  z-index: 9999;
  opacity: 0;
  width: 128rpx;
  height: 50rpx;
}
.heart_box cover-image,.share_box cover-image{
  width: 42rpx;
  height: 37rpx;
  margin-right: 18rpx;
}
.heart_box .option_text,.share_box .option_text{
  font-size: 32rpx;
  color: #ffffff;
  margin-top: -5rpx;
}
.gift_box{
  width: 85rpx;
  height: 80rpx;
  margin-left: 90rpx;
}
.close_box{
  width: 52rpx;
  height: 52rpx;
  margin: 32rpx 0 0 124rpx;
}
.chat_box{
  width:178rpx;
  height:63rpx;
  margin-top: 21rpx;
  border-radius:28rpx;
  background:#ffb320;
  box-shadow:0 5px 0 #f39442;
  color: #ff0101;
  font-size: 28rpx;
  text-align: center;
  line-height: 64rpx;
}
.video_prompt{
  position: fixed;
  top:40%;
  left: 65rpx;
  width: 620rpx;
  height: 326rpx;
  border-radius: 15rpx;
  border-top:6rpx solid #ffb320;
  background-color: #ffffff;
}
.text_box{
  width: 100%;
  padding:50rpx 0;
}
.prompt_text{
  width: 100%;
  text-align: center;
  color: #3b3b3b;
  font-size: 30rpx;
  line-height: 48rpx;
}
.prompt_btn{
  display: flex;
  padding: 0 76rpx 30rpx 76rpx;
  justify-content: space-around;
}
.prompt_btn cover-view{
  display: inline-block;
  width:210rpx;
  height:84rpx;
  border-radius:38rpx;
  background:#ffb320;
  box-shadow:0 5px 0 #f39442;
  color: #ffffff;
  font-size: 30rpx;
  text-align: center;
  line-height: 89rpx;
  overflow: visible;
}

