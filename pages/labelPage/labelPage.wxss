/* pages/labelPage/labelPage.wxss */
.label_page{
  width: 100%;
  padding-bottom: 50rpx;
}
.bg_img{
  width: 100%;
  /* height: 100%; */
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
}
.selected_label{
  width: 100%;
  margin-top: 140rpx;
}
.label_tit{
  padding-left: 38rpx;
  font-size: 30rpx;
  color: #ffffff;
  line-height: 70rpx;
}
.label_select{
  width: 594rpx;
  min-height: 130rpx;
  padding:20rpx 0 0 24rpx;
  margin-left: 65rpx;
  border:1px #cacaca solid;
  border-radius: 10rpx;
  background-color: rgba(48, 48, 48, .6);
}
.label_item{
  padding:0 90rpx 0 40rpx;
}
.label_item text,.label_select text{
  display: inline-block;
  padding: 4rpx 30rpx;
  margin:0 24rpx 30rpx 0;
  font-size: 28rpx;
  color: #463102;
  line-height: 48rpx;
  background-color: #ffffff;
  border-radius: 28rpx;
}
.label_select text{
  background-color: #efa4a6;
}
.box-border{
  width: 720rpx;
  height: 16rpx;
  margin-left: 15rpx;
  background-color: #303030;
}
.label_btn{
  width:440rpx;
  height:72rpx;
  margin-top: 40rpx;
  border-radius:35rpx;
  background:#ffb320;
  box-shadow:0 5px 0 #f39442;
  color: #463102;
  font-size: 28rpx;
  text-align: center;
  line-height: 72rpx;
}
.active{
  border:1rpx #ffb320 solid;
}




















