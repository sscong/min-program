/**index.wxss**/
page{
  background-color: #000000;
}
.container{
  width: 100%;
}
.nav{
  display: flex;
  position: fixed;
  top:0;
  left:0;
  flex-direction: row;
  width: 100%;
  height: 145rpx;
  background-color: #ffb320;
  z-index: 9999;
}
.nav_with{
  margin-left:35rpx;
  display: flex;
  padding-top: 78rpx;
}
.nav_with image{
  width: 41rpx;
  height: 51rpx;
}
.nav_with .with_num{
  display: inline-block;
  width: 96rpx;
  height: 36rpx;
  margin-top: 8rpx;
  background-color: #e5a11d;
  line-height: 36rpx;
  text-align: center;
  color: #e91c2d;
  font-size: 30rpx;
}
.nav_with .with_word{
  display: inline-block;
  width:98rpx;
  height:40rpx;
  margin:6rpx 0 0 -16rpx;
  border-radius: 16rpx;
  background-color: #ff1616;
  text-align: center;
  line-height: 40rpx;
  color: #ffffff;
  font-size: 28rpx;
}
.nav_sign{
  display: flex;
  margin-left: 58rpx;
  padding-top: 63rpx;
}
.nav_sign image{
  width: 69rpx;
  height: 66rpx;
  margin-right:16rpx;
}
.nav_sign text{
  margin-top: 24rpx;
  font-size: 36rpx;
  color: #463102;
}
.tab_tit{
  position: fixed;
  top:145rpx;
  left:0;
  width:100%;
  z-index: 9999;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background-color: #e5a11d;
}
.tit{
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  height: 80rpx;
  color: #e91c2d;
  line-height: 80rpx;
}
.tit_line{
  position:absolute;
  top:10rpx;
  left:374rpx;
  width: 2rpx;
  height: 62rpx;
  background-color: #f4e2c2;
}
.active{
  color:#ffffff;
}
.tab_con{
  padding-top: 225rpx;
  background-color: #000000;
}
.tab_con .forward{
  position: fixed;
  width: 141rpx;
  height: 141rpx;
  top:1015rpx;
  right:35rpx;
  z-index: 9999;
}
.video_page{
  display: none;
  padding:20rpx;
  flex-flow:row wrap;
  justify-content: space-between;
}
.video_page.active{
  display: flex;
}
.video_item{
  position: relative;
  width: 346rpx;
  height: 420rpx;
  margin-bottom:20rpx; 
}
.video_item_img{
  width: 100%;
  height: 100%;
}
.info_item{
  position: absolute;
  left:0;
  bottom: 0;
  width:100%;
  height: 80rpx;
  background-color: rgba(0, 0, 0, .5)
}
.user_img{
  position: absolute;
  top:-18rpx;
  left:12rpx;
  width: 69rpx;
  height: 69rpx;
  border-radius: 100%;
}
.info_detail{
  text-align: center;
}
.info_name{
  font-size: 24rpx;
  color: #ffffff;
  line-height: 80rpx;
}
.info_other{
  position:absolute;
  top:15rpx;
  right: 10rpx;
}
.info_heart{
  display: flex;
  margin-top:15rpx;
}
.info_age,.heart_num{
  font-size: 18rpx;
  color: #ffffff;
}
.heart_img{
  width: 24rpx;
  height: 22rpx;
  margin: -3rpx 0 0 8rpx;
}
.heart_num{
  line-height: 14rpx;
}













