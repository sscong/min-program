.gift_bottom .has_num{
  float: left;
  color: #fff;
  font-size: 24rpx;
  margin-left: 50rpx;
  margin-right: 120rpx;
  line-height: 58rpx;
}
.gift_bottom .pay_btn{
  width: 153rpx;
  height: 58rpx;
  line-height: 58rpx;
  border-radius: 10rpx;
  background: #ffb321;
  color: #473102;
  font-size: 34rpx;
  float: left;
}
.gift_bottom .give_box{
  float: right;
  margin-right: 28rpx;
 
}
.gift_bottom .give_box .give_num{
  width: 136rpx;
  height: 55rpx;
  border: 1px solid #fff;
  border-radius: 10rpx;
  color: #fff;
  float: left;
  text-align: center;

}
.gift_bottom .give_box .give_btn{
  width: 120rpx;
  height: 61rpx;
  background: #ff2093;
  color: #fff;
  border-radius: 10rpx;
  font-size: 34rpx;
  line-height: 57rpx;
  padding: 0;
  float: left;
  margin-left: -10rpx;
}