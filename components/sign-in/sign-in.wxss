/* components/sign-in/sign-in.wxss */
.sign_in{
  position: fixed;
  top:20rpx;
  left:0;
  z-index: 9999;
  width: 100%;
}
.sign_in .sign_bg{
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
  height: 1010rpx;
  z-index: -1;
}
.sign_box{
  width: 100%;
  margin:390rpx 0 0 0;
  text-align: center;
}
.sign_tit{
  width: 100%;
  font-size: 16rpx;
  color: #462202;
  line-height: 18rpx;
}
.package_box{
  display: flex;
  flex-flow: row wrap;
  padding-left:130rpx;
}
.pack_item{
  position: relative;
  width: 99rpx;
  height: 128rpx; 
  margin:30rpx 30rpx 0 0;
  text-align: center;
}
.pack_img_ing{
  position: absolute;
  top:0;
  left: 0;
  width: 99rpx;
  height: 128rpx;
  z-index: -1;
  }
.pack_item text{
  font-size: 22rpx;
  color: #ffffff;
}
.sign_gift{
  width: 320rpx;
  height: 50rpx;
  padding-top:15rpx;
  padding-bottom: 15rpx;
  margin: 30rpx 0 30rpx 214rpx;
  background-color: #5dc9fa;
  text-align: center;
  border-radius: 10rpx;
}
.sign_gift text{
  display: block;
  font-size: 22rpx;
  color: #ffffff;
  line-height: 28rpx;
}
.sign_btn{
  width:480rpx;
  height:84rpx;
  border-radius:36rpx;
  background:#ffb320;
  box-shadow:0 5px 0 #f39442;
  color: #442103;
  font-size: 28rpx;
  text-align: center;
  line-height: 89rpx;
}










